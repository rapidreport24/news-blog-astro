---
const { title, description, publishedAt, imageUrl, language, category } = Astro.props;
const currentUrl = Astro.url.href;
---

<!DOCTYPE html>
<html lang={language}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>

  <!-- Open Graph -->
  <meta property="og:type" content="article">
  <meta property="og:url" content={currentUrl}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={imageUrl}>

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content={currentUrl}>
  <meta property="twitter:title" content={title}>
  <meta property="twitter:description" content={description}>
  <meta property="twitter:image" content={imageUrl}>

  <!-- Canonical -->
  <link rel="canonical" href={currentUrl}>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      line-height: 1.7;
      color: #333;
      background: #f9f9f9;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background: white;
      min-height: 100vh;
    }

    .header {
      text-align: center;
      padding: 2rem 0;
      border-bottom: 2px solid #eee;
    }

    .category-badge {
      display: inline-block;
      background: #007bff;
      color: white;
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 0.85rem;
      text-transform: uppercase;
      margin-bottom: 1rem;
    }

    h1 {
      font-size: 2.2rem;
      margin-bottom: 1rem;
      color: #222;
    }

    .meta {
      color: #666;
      font-size: 0.95rem;
    }

    .featured-image {
      width: 100%;
      max-height: 400px;
      object-fit: cover;
      border-radius: 12px;
      margin: 2rem 0;
    }

    .content {
      padding: 2rem 0;
      font-size: 1.1rem;
    }

    .content p {
      margin-bottom: 1.5rem;
    }

    .content h1, .content h2, .content h3 {
      margin-top: 2rem;
      margin-bottom: 1rem;
      color: #222;
    }

    .content img {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
      margin: 1.5rem 0;
    }

    .content ol {
      margin-left: 2rem;
      margin-bottom: 1.5rem;
    }

    .content ol li {
      margin-bottom: 0.5rem;
    }

    .ad-slot {
      background: #f5f5f5;
      padding: 40px 20px;
      text-align: center;
      margin: 2rem 0;
      border-radius: 8px;
      border: 2px dashed #ddd;
      color: #999;
    }

    footer {
      margin-top: 3rem;
      padding-top: 2rem;
      border-top: 1px solid #eee;
      text-align: center;
      color: #666;
      font-size: 0.9rem;
    }

    @media (max-width: 768px) {
      h1 {
        font-size: 1.5rem;
      }
      .content {
        font-size: 1rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <div class="category-badge">{category}</div>
      <h1>{title}</h1>
      <div class="meta">
        Published: {new Date(publishedAt).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </div>
    </div>

    {imageUrl && <img src={imageUrl} alt={title} class="featured-image" />}

    <!-- Ad Slot 1 -->
    <div class="ad-slot">
      <p>[Advertisement Space 1]</p>
    </div>

    <div class="content">
      <slot />
    </div>

    <!-- Ad Slot 2 -->
    <div class="ad-slot">
      <p>[Advertisement Space 2]</p>
    </div>

    <footer>
      <p>&copy; 2026 Your News Platform. All rights reserved.</p>
      <p style="margin-top: 0.5rem;">Auto-generated content powered by AI</p>
    </footer>
  </div>
</body>
</html>
