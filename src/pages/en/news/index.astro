---
import { readdir } from "node:fs/promises";
import path from "node:path";

const dir = path.join(process.cwd(), "src", "content", "news", "en");

let slugs = [];
try {
  const files = await readdir(dir);
  slugs = files
    .filter((f) => f.endsWith(".md"))
    .map((f) => f.replace(/\.md$/, ""))
    .sort()
    .reverse();
} catch (_) {
  slugs = [];
}
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>English News</title>
</head>
<body style="font-family: system-ui; max-width: 900px; margin: 0 auto; padding: 20px;">
  <h1>English News</h1>

  {slugs.length === 0 ? (
    <p>No articles yet. (Cloud Functions will push markdown soon.)</p>
  ) : (
    <ul>
      {slugs.map((s) => <li><a href={`/en/news/${s}/`}>{s}</a></li>)}
    </ul>
  )}

  <p><a href="/">‚Üê Home</a></p>
</body>
</html>
