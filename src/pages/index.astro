  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --primary-blue: #007bff;
      --primary-dark: #0056b3;
      --text-dark: #222;
      --text-gray: #666;
      --bg-white: #fff;
      --bg-light: #f8f9fa;
      --shadow: 0 2px 8px rgba(0,0,0,0.1);
      --shadow-hover: 0 4px 16px rgba(0,0,0,0.15);
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
      background: var(--bg-white);
      color: var(--text-dark);
      line-height: 1.6;
    }

    .header {
      position: sticky;
      top: 0;
      background: var(--bg-white);
      box-shadow: var(--shadow);
      z-index: 1000;
      padding: 0.8rem 0;
    }

    .header-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--primary-blue);
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .logo-icon {
      font-size: 1.8rem;
    }

    .menu-toggle {
      background: none;
      border: none;
      font-size: 1.8rem;
      cursor: pointer;
      color: var(--text-dark);
      display: flex;
      align-items: center;
    }

    .nav-menu {
      position: fixed;
      top: 0;
      right: -100%;
      width: 280px;
      height: 100vh;
      background: var(--bg-white);
      box-shadow: -2px 0 8px rgba(0,0,0,0.2);
      transition: right 0.3s ease;
      padding: 2rem 0;
      z-index: 2000;
    }

    .nav-menu.active {
      right: 0;
    }

    .nav-close {
      position: absolute;
      top: 1rem;
      right: 1rem;
      background: none;
      border: none;
      font-size: 2rem;
      cursor: pointer;
      color: var(--text-gray);
    }

    .nav-menu ul {
      list-style: none;
      padding: 2rem 0;
    }

    .nav-menu ul li {
      margin: 0;
    }

    .nav-menu ul li a {
      display: block;
      padding: 1rem 2rem;
      color: var(--text-dark);
      text-decoration: none;
      font-size: 1.1rem;
      transition: background 0.2s;
    }

    .nav-menu ul li a:hover {
      background: var(--bg-light);
      color: var(--primary-blue);
    }

    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background: rgba(0,0,0,0.5);
      display: none;
      z-index: 1500;
    }

    .overlay.active {
      display: block;
    }

    .main {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem 1rem;
    }

    .ad-banner-top {
      background: var(--bg-light);
      border: 2px dashed #ddd;
      border-radius: 8px;
      padding: 60px 20px;
      text-align: center;
      color: var(--text-gray);
      margin-bottom: 2rem;
      min-height: 120px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .hero {
      text-align: center;
      margin-bottom: 3rem;
    }

    .hero h1 {
      font-size: 2.5rem;
      color: var(--text-dark);
      margin-bottom: 0.5rem;
      font-weight: 700;
    }

    .hero p {
      font-size: 1.1rem;
      color: var(--text-gray);
      margin-bottom: 0.5rem;
    }

    .hero-subtitle {
      font-size: 0.95rem;
      color: var(--text-gray);
    }

    .categories-title {
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
      color: var(--text-dark);
      font-weight: 600;
    }

    .categories-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
      margin-bottom: 3rem;
    }

    .category-card {
      background: var(--bg-white);
      border: 2px solid #e9ecef;
      border-radius: 12px;
      padding: 2rem 1rem;
      text-align: center;
      text-decoration: none;
      color: var(--text-dark);
      transition: all 0.3s ease;
      box-shadow: var(--shadow);
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.8rem;
      min-height: 140px;
    }

    .category-card:hover {
      transform: translateY(-4px);
      box-shadow: var(--shadow-hover);
      border-color: var(--primary-blue);
    }

    .category-icon {
      font-size: 2.5rem;
    }

    .category-name {
      font-size: 1.1rem;
      font-weight: 600;
      color: var(--text-dark);
    }

    .category-desc {
      font-size: 0.85rem;
      color: var(--text-gray);
    }

    .dark-mode-toggle {
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      width: 56px;
      height: 56px;
      border-radius: 50%;
      background: var(--primary-blue);
      color: white;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      box-shadow: var(--shadow-hover);
      z-index: 900;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s;
    }

    .dark-mode-toggle:hover {
      transform: scale(1.1);
    }

    .footer {
      background: var(--bg-light);
      padding: 2rem 1rem;
      margin-top: 3rem;
      border-top: 1px solid #dee2e6;
    }

    .footer-content {
      max-width: 1200px;
      margin: 0 auto;
      text-align: center;
      color: var(--text-gray);
    }

    .footer-links {
      display: flex;
      justify-content: center;
      gap: 2rem;
      flex-wrap: wrap;
      margin-bottom: 1rem;
    }

    .footer-links a {
      color: var(--text-gray);
      text-decoration: none;
      font-size: 0.95rem;
    }

    .footer-links a:hover {
      color: var(--primary-blue);
    }

    .footer-copy {
      font-size: 0.9rem;
      margin-top: 1rem;
    }

    body.dark-mode {
      background: #1a1a1a;
      color: #e0e0e0;
    }

    body.dark-mode .header,
    body.dark-mode .nav-menu {
      background: #2d2d2d;
    }

    body.dark-mode .category-card {
      background: #2d2d2d;
      border-color: #444;
      color: #e0e0e0;
    }

    body.dark-mode .category-name {
      color: #e0e0e0;
    }

    body.dark-mode .footer {
      background: #2d2d2d;
      border-top-color: #444;
    }

    body.dark-mode .ad-banner-top {
      background: #2d2d2d;
      border-color: #444;
    }

    @media (min-width: 768px) {
      .categories-grid {
        grid-template-columns: repeat(3, 1fr);
      }

      .hero h1 {
        font-size: 3rem;
      }
    }

    @media (min-width: 1024px) {
      .menu-toggle {
        display: none;
      }

      .nav-menu {
        position: static;
        width: auto;
        height: auto;
        box-shadow: none;
        padding: 0;
      }

      .nav-close {
        display: none;
      }

      .nav-menu ul {
        display: flex;
        gap: 0.5rem;
        padding: 0;
      }

      .nav-menu ul li a {
        padding: 0.5rem 1rem;
        border-radius: 6px;
      }
    }
  </style>
